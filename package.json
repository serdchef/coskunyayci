{
  "name": "baklava-site",
  "version": "1.0.0",
  "description": "Küresel dijital-first baklava markası için tam kapsamlı Next.js platformu",
  "private": true,
  "scripts": {
    "dev": "next dev -p 4000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "node prisma/seed.js",
    "worker:notifications": "tsx worker/notificationWorker.ts",
    "worker:dev": "tsx watch worker/videoWorker.ts",
    "worker:start": "node dist/worker/videoWorker.js",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^1.5.0",
    "@aws-sdk/client-s3": "^3.540.0",
    "@aws-sdk/s3-request-presigner": "^3.540.0",
    "@hookform/resolvers": "^3.3.0",
    "@prisma/client": "^5.12.0",
    "resend": "^6.6.0",
    "@radix-ui/react-dialog": "^1.0.0",
    "@radix-ui/react-dropdown-menu": "^2.0.0",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-tabs": "^1.0.0",
    "@radix-ui/react-toast": "^1.1.0",
    "@react-email/components": "^1.0.2",
    "@stripe/react-stripe-js": "^5.4.1",
    "@stripe/stripe-js": "^8.5.3",
    "@tanstack/react-query": "^5.28.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.4.0",
    "clsx": "^2.1.0",
    "dayjs": "^1.11.0",
    "framer-motion": "^11.0.0",
    "ioredis": "^5.3.0",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.356.0",
    "nanoid": "^5.0.0",
    "next": "^14.2.0",
    "next-auth": "^4.24.0",
    "next-intl": "^3.11.0",
    "openai": "^4.29.0",
    "pino": "^8.19.0",
    "pino-pretty": "^11.0.0",
    "posthog-js": "^1.110.0",
    "posthog-node": "^4.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-email": "^5.1.0",
    "react-hook-form": "^7.51.0",
    "resend": "^6.6.0",
    "sonner": "^1.4.0",
    "stripe": "^14.21.0",
    "swr": "^2.2.0",
    "tailwind-merge": "^2.2.0",
    "twilio": "^5.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.0",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.0",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.2.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/bcryptjs": "^2.4.0",
    "@types/leaflet": "^1.9.21",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/stripe": "^8.0.416",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "msw": "^2.2.0",
    "postcss": "^8.4.0",
    "prettier": "^3.2.0",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "prisma": "^5.12.0",
    "stylelint": "^16.26.1",
    "stylelint-config-tailwindcss": "^1.0.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
